@model List<MilkyProject.WebUI.Dtos.Slider.ResultSliderDto>
@{
    int count = 0;
}
<div class="container-fluid px-0 mb-5">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                if(count==0)
                {
                    <div class="carousel-item active">
                        <img class="w-100" src="@item.ImageUrl" alt="Image">
                        <div class="carousel-caption">
                            <div class="container">
                                <div class="row justify-content-end">
                                    <div class="col-lg-8 text-end">
                                        <p class="fs-4 text-white">@item.Description</p>
                                        <h1 class="display-1 text-white mb-5 animated slideInRight">@item.Description2</h1>
                                        <a href="" class="btn btn-secondary rounded-pill py-3 px-5 animated slideInLeft">Daha Fazlası için..</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    count++;
                }
                else
                {
                    <div class="carousel-item">
                        <img class="w-100" src="@item.ImageUrl" alt="Image">
                        <div class="carousel-caption">
                            <div class="container">
                                <div class="row justify-content-end">
                                    <div class="col-lg-8 text-end">
                                        <p class="fs-4 text-white">@item.Description</p>
                                        <h1 class="display-1 text-white mb-5 animated slideInRight">@item.Description</h1>
                                        <a href="" class="btn btn-secondary rounded-pill py-3 px-5 animated slideInLeft">Daha Fazlası için...</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
            }
        </div>


        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Önceki</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Sonraki</span>
        </button>
    </div>
</div>