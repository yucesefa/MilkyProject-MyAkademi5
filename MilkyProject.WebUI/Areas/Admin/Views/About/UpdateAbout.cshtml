@model MilkyProject.WebUI.Dtos.About.UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Hakkımda Kısmı Güncelleme</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                    <tbody>
                        <form method="post">
                            <div classs="container">
                                <br /><br />
                                <label>Başlık</label>
                                <input type="hidden" asp-for="AboutId" value="" />
                                <input type="text" asp-for="Title" class="form-control" />
                                <br />
                                <label>Açıklama</label>
                                <input type="text" asp-for="Description" class="form-control" />
                                <br />
                                <label>Liste Başlık</label>
                                <input type="text" asp-for="AboutListTitle" class="form-control" />
                                <br />
                                <label>Liste Açıklama</label>
                                <input type="text" asp-for="AboutListDescription" class="form-control" />
                                <br />
                                <label>Liste Görsel</label>
                                <input type="text" asp-for="AboutListIcon" class="form-control" />
                                <br />
                            </div>
                            <br />
                            <button class="btn btn-primary">
                                Güncelle
                            </button>
                        </form>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>