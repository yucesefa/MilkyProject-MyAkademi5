@model List<MilkyProject.WebUI.Dtos.Product.ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Ürünler</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ürün Adı</th>
                            <th scope="col">Eski Fiyat</th>
                            <th scope="col">Yeni Fiyat</th>
                            <th scope="col">Kategori Adı</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@item.ImageUrl">
                                        </a>
                                        <div class="media-body">
                                            <span class="mb-0 text-sm">@item.ProductName</span>
                                        </div>
                                    </div>
                                </th>
                                <td>
                                    @item.OldPrice
                                </td>
                                <td>
                                    @item.NewPrice
                                </td>
                                <td>
                                    @item.category.CategoryName
                                </td>
                                <td><a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-warning">Sil</a></td>
                                <td><a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <br />
        <td><a href="/Admin/Product/CreateProduct/" class="btn btn-primary">Yeni Ürün Girişi</a></td>
    </div>
</div>

