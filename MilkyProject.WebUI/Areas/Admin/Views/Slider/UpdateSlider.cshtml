@model MilkyProject.WebUI.Dtos.Slider.UpdateSliderDto
@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Görsel Kısmı Güncelleme</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                    <tbody>
                        <form method="post">
                            <div classs="container">
                                <br /><br />
                                <label>Görsel</label>
                                <input type="hidden" asp-for="SliderId" value="" />
                                <input type="text" asp-for="ImageUrl" class="form-control" />
                                <br />
                                <label>Açıklama 1</label>
                                <input type="text" asp-for="Description" class="form-control" />
                                <br />
                                <label>Açıklama 2</label>
                                <input type="text" asp-for="Description2" class="form-control" />
                                <br />
                            </div>
                            <br />
                            <button class="btn btn-primary">
                                Görseli Güncelle
                            </button>
                        </form>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>